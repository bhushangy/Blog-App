<% include partials/header %>
    <div class="ui main text container"><!--u can add segment class here if u want-->
   	    <div class="ui huge header"><%=blog.title%></div>
        <div class="ui top attached segment">
	        <div class="item">
	           <img class="ui centered rounded image" src="<%= blog.image %>">
	            <div class="content">
	                <div class="meta">
    	                <span><%= blog.created.toDateString() %></span>
	                </div>
            	     <div class="description">
            	        <p><%- blog.body %></p> <!--here ur evaluating html within the text area..dats why   -->
            	     </div>
	            </div>
			</div>
			<br>
			
            <a class="ui orange basic button"  href="/blogs/<%=blog._id%>/edit">Edit Blog</a>
            <form id="delete" method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
                <button class="ui red basic button" type="submit">Delete Blog</button>
            </form>
        </div>
        
    </div>
    


<% include partials/footer %>
